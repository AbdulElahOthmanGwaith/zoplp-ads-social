name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main   # سيتم النشر عند كل push على الفرع main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ استرجاع الكود
      - name: Checkout repository
        uses: actions/checkout@v3

      # 2️⃣ تثبيت Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20'   # اختر نسخة Node.js المناسبة لمشروعك

      # 3️⃣ تثبيت الحزم وبناء المشروع
      - name: Install dependencies and build
        run: |
          npm install
          npm run build

      # 4️⃣ نشر إلى GitHub Pages
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist   # مجلد البناء
